{% extends 'BlogBundle::base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Createat</th>
                    <td>{% if product.createAt %}{{ product.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Updateat</th>
                    <td>{% if product.updateAt %}{{ product.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <div class="row">
                {% for image in product.images %}
                    <div class="col-md-3">
                        <img src="{{ asset('upload/' ~ image.file) }}" alt="{{ image.file }}" width="100%">
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-md-12">
            <a class="btn btn-sm btn-default" href="{{ path('product_index') }}">Back to the list</a>
            <a class="btn btn-sm btn-default"  href="{{ path('product_edit', { 'id': product.id }) }}">Edit</a>
            <a class="btn btn-sm btn-default"  href="{{ path('product_delete', { 'id': product.id }) }}">Delete</a>
        </div>
    </div>

{% endblock %}
