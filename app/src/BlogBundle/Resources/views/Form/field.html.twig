{% block file_widget %}
    {% set type = type|default('file') %}
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <input type="{{ type|raw }}"
                       id="{{ id|raw }}" {% if attr['multiple'] is defined %} {{ attr['multiple']|raw }} {% endif %}
                       name="{{ full_name|raw }}" {% if disabled == 'true' %} disabled="disabled" {% endif %} />
            </div>
            <div class="col-md-8">
                <div class="preview{{ '_' ~ id|raw }}"></div>
            </div>
        </div>
    </div>
{% endblock %}

