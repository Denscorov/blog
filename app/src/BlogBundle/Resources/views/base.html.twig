<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Blog</title>
    <link href="{{ asset('bundles/blog/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/blog/css/custom.css') }}" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">{{ project_name }}</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>


            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted("ROLE_ADMIN") %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Create<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('category_new') }}">Category</a></li>
                            <li><a href="{{ path('post_new') }}">Post</a></li>
                            {#<li><a href="{{ path('category_new') }}">Category</a></li>#}
                            {#<li><a href="#">Another action</a></li>#}
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">List<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('category_index') }}">Category</a></li>
                            <li><a href="{{ path('post_index') }}">Post</a></li>
                            {#<li><a href="{{ path('category_new') }}">Category</a></li>#}
                            {#<li><a href="#">Another action</a></li>#}
                        </ul>
                    </li>
                {% endif %}

                {% if app.user %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">{{ app.user|title }}<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                            {#<li><a href="#">Another action</a></li>#}
                        </ul>
                    </li>
                {% else %}
                    <li><a href="{{ path('login') }}">Login</a></li>
                {% endif %}

            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-head">{% block head %}{% endblock %}</div>
                <div class="section-body">{% block content %}{% endblock %}</div>
            </div>
        </div>
    </div>
</div>
<script src="{{ asset('bundles/blog/js/jquery.min.js') }}"></script>
<script src="{{ asset('bundles/blog/js/bootstrap.min.js') }}"></script>
</body>
</html>